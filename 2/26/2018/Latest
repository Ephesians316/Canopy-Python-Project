def quiz_game():
    print("Welcome to the Quiz game! Type 'start' to begin the game or type 'exit' to leave the game")
    options = 'start', 'exit', 'Start', 'Exit'
    answer = raw_input('Answer: ')
    while answer != options:
        if answer == 'start':
            return("Let's get started")
        if answer == 'leave':
            return("Goodbye then!")
    
